<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <context-param>
    <param-name>logbackConfigLocation</param-name>
    <param-value>file:/apps/config/paymng/logback.xml</param-value>
  </context-param>
  <listener>
    <listener-class>ch.qos.logback.ext.spring.web.LogbackConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>logTraceFilter</filter-name>
    <filter-class>
			com.huateng.logback.mdc.trace.servlet.filter.TraceNoFilter</filter-class>
  </filter>
  <filter>
    <filter-name>crossFilter</filter-name>
    <filter-class>com.fosun.filter.CrossFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>crossFilter</filter-name>
    <url-pattern>*.jpeg</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>crossFilter</filter-name>
    <url-pattern>*.jpg</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>crossFilter</filter-name>
    <url-pattern>*.png</url-pattern>
  </filter-mapping>  
  <filter-mapping>
    <filter-name>crossFilter</filter-name>
    <url-pattern>*.bmp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>crossFilter</filter-name>
    <url-pattern>*.gif</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>crossFilter</filter-name>
    <url-pattern>*.*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>logTraceFilter</filter-name>
    <url-pattern>*.htm</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>*.htm</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>InitServlet</servlet-name>
    <servlet-class>com.huateng.scube.client.web.InitServlet</servlet-class>
    <load-on-startup>5</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <init-param>
	<param-name>dispatchOptionsRequest</param-name>
	<param-value>true</param-value>
	</init-param>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Maven自动化构建发布Web应用后，回调测试启动是否正常的Servlet</description>
    <servlet-name>DetectServlet</servlet-name>
    <servlet-class>com.huateng.common.web.DetectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DetectServlet</servlet-name>
    <url-pattern>/status/detect.servlet</url-pattern>
  </servlet-mapping>
<context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>pay-mng</param-value>
</context-param>  
</web-app>